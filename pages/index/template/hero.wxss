.hero {
  display: inline-block;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  /* padding-bottom: 6rpx; */
  background: black;
  width: calc((100vw - 80rpx)/3);
  height: calc((100vw - 80rpx)*0.1875);
}

.avatar {
  width: 100%;
  height: 100%;
  box-shadow: 0px 0px 2px 1px rgba(0, 0, 0, 0.4);
}

.hero-name {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  color: white;
  font-size: 22rpx;
  /* padding-bottom: 4rpx; */
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
}
