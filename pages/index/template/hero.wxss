.hero{
  display: inline-block;
  width: 223rpx;
  height: 125rpx;
  margin-left: 20rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.hero-name {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  color:white;
  font-size: 24rpx;
  padding-bottom: 4rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 100%);
}
