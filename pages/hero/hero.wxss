/* pages/hero/hero.wxss */
@import "../../component/loadmore.wxss";

page {
  width: 100%;
  height: 100%;
  background: #363940;
  color: white;
}

.swiper-tab {
  width: 100vw;
  text-align: center;
  overflow: hidden;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  color: #777;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
}

.on {
  color: red;
  font-weight: 500;
  border-bottom: 6rpx solid red;
}

.swiper {
  height: calc(100vh - 80rpx);
}

.scroll-view {
  width: 100vw;
  height: 100%;
}

