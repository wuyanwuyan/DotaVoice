/* pages/hero/hero.wxss */

page {
  background: #363940;
  color: white;
}

.bg-container {
  position: relative;
}

.bg-img {
  position: fixed;
  z-index: -1;
  width: 100vw;
  height: 100vh;
  filter: blur(5px);
  opacity: 0.1;
}

.banner-img {
  width: 100vw;
  height: 56vw;
}

.head-title {
  color: #8e92a0;
  background: #091016;
  padding: 10rpx 10rpx;
  margin-top: -1rpx;
  font-weight: bold;
}

.voice-item {
  font-size: 38rpx;
  padding: 8rpx 0 8rpx 16rpx;
  border-bottom: 1rpx #627082 solid;
}

.voice-item-hover {
  background: #627082;
}

.samll-avater {
  width: 40rpx;
  /* height: 40rpx; */
  margin-right: 8rpx;
  display: inline-block;
  vertical-align: middle;
}

.middle-text {
  font-style: italic;
  font-size: 30rpx;
  padding: 6rpx 0 0 12rpx;
  color:#8f93a1;
}

.small-text {
  font-style: italic;
  font-size: 28rpx;
  padding: 6rpx 0 0 12rpx;
  color:#8f93a1;
}

.skill-container {
  padding: 6rpx 0 0 12rpx;
}

.skill-img {
  width: 50rpx;
   height: 50rpx; 
  /* height: auto; */
}

.skill-text {
  margin-left: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.rune-text {
   font-style: italic;
}

.subTitle-text {
  font-style: italic;
  font-size: 30rpx;
  font-weight: 500;
  padding: 6rpx 0 0 12rpx;
  color:#8f93a1;
}
