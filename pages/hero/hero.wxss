/* pages/hero/hero.wxss */
@import "../../component/loadmore.wxss";

page {
  background: #363940;
  color: white;
}

.bg-container {
  position: relative;
}

.bg-img {
  position: fixed;
  z-index: -1;
  width: 100vw;
  height: 100vh;
  filter: blur(5px);
  opacity: 0.1;
}

.banner-view {
  background: #0d0d0d;
  width: 100vw;
  padding: 20rpx 0 10rpx 40rpx;
}

.banner-view-Strength {
  background: linear-gradient(to right, rgba(236, 59, 6, 0.2) 0%, rgba(25, 26, 28, 0.82) 100%);
}

.banner-view-Agility {
  background: linear-gradient(to right, rgba(38, 224, 48, 0.2) 0%, rgba(25, 26, 28, 0.82) 100%);
}

.banner-view-Intelligence {
  background: linear-gradient(to right, rgba(0, 217, 236, 0.2) 0%, rgba(25, 26, 28, 0.82) 100%);
}

.banner-line {
  height: 10rpx;
}

.banner-line-Strength {
  background: linear-gradient(to right, rgba(25, 26, 28, 1) 0%, rgba(236, 59, 6, 0.4) 100%);
}

.banner-line-Agility {
  background: linear-gradient(to right, rgba(25, 26, 28, 1) 0%, rgba(38, 224, 48, 0.4) 100%);
}

.banner-line-Intelligence {
  background: linear-gradient(to right, rgba(25, 26, 28, 1) 0%, rgba(0, 217, 236, 0.4) 100%);
}

.banner-img {
  width: 220rpx;
  height: 124rpx;
  box-sizing: content-box;
  border: 4rpx black solid;
  border-radius: 6rpx;
  box-shadow: 0px 0px 4px 2px rgba(0, 0, 0, 0.4);
}

.name_view {
  margin-left: 30rpx;
}

.en-name_txt {
  display: block;
  font-size: 34rpx;
  font-weight: 500;
}

.cn-name_txt {
  display: block;
  font-size: 28rpx;
  color: #f1f1f1;
}

.head-title {
  color: #8e92a0;
  background: #091016;
  padding: 10rpx 10rpx;
  margin-top: -1rpx;
  font-weight: bold;
}

.voice-item {
  font-size: 38rpx;
  padding: 8rpx 0 8rpx 16rpx;
  border-bottom: 1rpx #627082 solid;
}

.voice-item-hover {
  background: #627082;
}

.small-avater {
  width: 40rpx;
  max-height: 40rpx;
  /* height: 40rpx; */
  margin-right: 8rpx;
  display: inline-block;
  vertical-align: middle;
}

.middle-text {
  font-style: italic;
  font-size: 30rpx;
  padding: 6rpx 0 0 12rpx;
  color: #8f93a1;
}

.small-text {
  font-style: italic;
  font-size: 28rpx;
  padding: 6rpx 0 0 12rpx;
  color: #8f93a1;
}

.skill-container {
  padding: 6rpx 0 0 12rpx;
}

.skill-img {
  width: 50rpx;
  height: 50rpx;
  /* height: auto; */
}

.skill-text {
  margin-left: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.rune-text {
  font-style: italic;
}

.subTitle-text {
  font-style: italic;
  font-size: 30rpx;
  font-weight: 500;
  padding: 6rpx 0 0 12rpx;
  color: #8f93a1;
}
