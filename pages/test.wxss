.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #777;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: #777;
}

.on {
  color: #da7c0c;
  border-bottom: 5rpx solid #da7c0c;
}

.swiper-box {
  display: block;
  /* height: 100%; */
  width: 100%;
  overflow: hidden;
}


.swiper{
   height: calc(100vh - 80rpx);
}


.scroll-outer{
  
  white-space: nowrap;
}

.scroll-one{
  display: inline-block;
  width: 100vw;
  height: 100%;
  text-align: center;
}